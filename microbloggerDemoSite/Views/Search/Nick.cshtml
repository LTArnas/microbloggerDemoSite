@model List<microbloggerDemoSite.Identity.IdentityUser>

@{
    ViewBag.Title = "Search";
}

<div class="row">
    <div class="col-xs-12">
        <h2>Search! <small>Where is that person...?</small></h2>
    </div>
</div>

<div class="row">
    <div class="col-xs-12">
        <h4>Anyone with "@Request.QueryString["query"]" in their nick. (Case-sensitive)</h4>
    </div>
</div>

@if (Model == null || Model.Count < 1)
{
    <div class="row">
        <div class="col-xs-12">
            <h3 class="alert alert-info">Your search did not return any results. :(</h3>
        </div>
    </div>
}
else
{
    foreach (var user in Model)
    {
        <div class="row">
            <div class="col-xs-12">
                <a class="btn btn-info btn-block" 
                   href=@Url.Action("Get", "User", new { userId = user.Id })>
                    @user.Nick
                </a>
            </div>
        </div>
    }
}